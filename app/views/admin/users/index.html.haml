%h1 Manage Admins

= simple_form_for([:admin, @user]) do |f|
  = f.input :username
  = f.submit "Make Admin" 

%table#users
  %thead
    %tr
      %td CNetID
      %td Action
  %tbody
  - @users.each do |user|
    %tr.user{"data-user" => user.id}
      %td= user.username
      %td 
        - if can? :destroy, user
          = link_to "Remove", admin_user_path(user), :remote => true, :method => :delete, :confirm => "Are you sure you want to remove this user's administrative powers?"

