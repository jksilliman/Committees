- title "Manage Sections"
= link_to "Create Section", new_admin_section_path, :class => "btn primary"
%table.committees.zebra-striped
  %thead
    %tr
      %th Name
      %th Action
  %tbody
    - @sections.each do |section|
      %tr
        %td= link_to section.name, admin_section_path(section)
        %td
          = link_to "Edit", edit_admin_section_path(section)
          = link_to "Delete", admin_section_path(section), :method => "delete", :confirm => "Are you sure you want to delete this section? Maybe you should just rename it?"
